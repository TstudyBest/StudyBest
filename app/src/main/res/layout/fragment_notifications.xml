<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvAlertsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reminders"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/text_primary"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAlertsSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All your scheduled task reminders"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAlertsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlerts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvAlertsSub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
